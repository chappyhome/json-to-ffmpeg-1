{
  "name": "json-to-ffmpeg-worker",
  "version": "1.0.0",
  "description": "Cloudflare Worker API adapter for json-to-ffmpeg",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "dev": "wrangler dev",
    "build": "tsc",
    "deploy": "wrangler deploy",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:api-local": "bash ./scripts/test-worker.sh --mode local",
    "test:api-remote": "bash ./scripts/test-worker.sh --mode remote --url $WORKER_URL"
  },
  "dependencies": {
    "json-to-ffmpeg": "file:..",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240620.0",
    "@types/node": "^20.14.0",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0",
    "wrangler": "^3.60.0"
  },
  "engines": {
    "node": ">=18"
  }
}
